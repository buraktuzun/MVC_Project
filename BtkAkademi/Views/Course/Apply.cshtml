@model Candidate


<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <select id="mySelect" asp-for="Age" class="form-control">
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p><input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.Net Core MVC" checked>ASP.Net Core MVC </input></p>
        <p><input id="api" type="radio" asp-for="SelectedCourse" value="ASP.Net Core API">ASP.Net Core API </input></p>
        <p><input id="blazor" type="radio" asp-for="SelectedCourse" value="Blazor">Blazor </input></p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>


</form>